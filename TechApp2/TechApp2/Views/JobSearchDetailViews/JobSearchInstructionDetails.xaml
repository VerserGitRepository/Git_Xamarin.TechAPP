<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="TechApp2.Views.JobSearchDetailViews.JobSearchInstructionDetails">
    <ContentPage.Content>
        <StackLayout>
                <StackLayout>
                    <Button x:Name="BtnBackToJobDetails" Clicked="BtnBackToJobDetails_Clicked" HeightRequest="35" Margin="0,5,0,0" 
                        Text="BACK TO JOB DETAILS" TextColor="White" BackgroundColor="Orange"/>               
            </StackLayout>
                <StackLayout>
                    <Frame BorderColor="Gray"
       CornerRadius="10" Margin="15" IsClippedToBounds="True"
                             HorizontalOptions="Center"
       VerticalOptions="Center"
       Padding="15" HasShadow="True">
                        <ScrollView BackgroundColor="Transparent" VerticalOptions="FillAndExpand">
                            <Label x:Name="txtWorkInstruction" Text="{Binding WorkInstructionData}" />
                        </ScrollView>
                    </Frame>
                </StackLayout>           
        </StackLayout>
    </ContentPage.Content>
</ContentPage>